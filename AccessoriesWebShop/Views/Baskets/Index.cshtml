@model IEnumerable<AccessoriesWebShop.Models.Basket>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-5 mb-5">Your Basket</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad.price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad.price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { userId = item.userID, adName = item.adName }) |
                @Html.ActionLink("Delete", "Delete", new { userId = item.userID, adName = item.adName })
            </td>
        </tr>
    }
</table>

<a onclick="location.href = '@Url.Action("Index", "Checkout")'" class="btn btn-primary float-right mt-5 mb-5">Go to checkout </a>